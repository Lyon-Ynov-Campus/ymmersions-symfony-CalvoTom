{# templates/header.html.twig #}

<header style="background-color: #000000; color: #ffffff; padding: 20px;">
    <div style="max-width: 1200px; margin: auto; display: flex; justify-content: space-between; align-items: center;">
        <div>
            <a href="{{ path('app_display') }}">
                <img src="{{ asset('img/logo_black.jpg') }}" alt="MVP Logo" style="height: 50px;"/> 
            </a>
        </div>
        <nav>
            <ul style="list-style: none; padding: 0; margin: 0; display: flex; gap: 20px;">
                {% if is_granted('ROLE_ADMIN') %}
                    <li><a href="{{ path('admin') }}" style="color: #ffffff; text-decoration: none;">Dashboard</a></li>
                {% endif %}
                {% if not is_granted('ROLE_USER') %}
                    <li><a href="{{ path('app_register') }}" style="color: #ffffff; text-decoration: none;">Register</a></li>
                    <li><a href="{{ path('app_login') }}" style="color: #ffffff; text-decoration: none;">Login</a></li>
                {% endif %}
                {% if is_granted('ROLE_USER') %}
                    <li><a href="{{ path('app_profile') }}" style="color: #ffffff; text-decoration: none;">Profile</a></li>
                {% endif %}
            </ul>
        </nav>
    </div>
</header>
