{# templates/tournament/create.html.twig #}

{% extends 'base.html.twig' %}

{% block stylesheets %}
<style>
    body {
        background-color: #ffffff !important;
        color: #000000;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 20px;
    }

    .tournament-form-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 20px;
        margin: 20px auto;
        max-width: 500px;
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    form{
        width: 80%;
        max-width: 400px;
    }

    h1 {
        font-size: 24px;
        margin-bottom: 15px;
        text-align: center;
    }

    label {
        font-weight: bold;
        font-size: 16px;
    }

    input, select {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 16px;
        margin-bottom: 15px;
        margin-left: auto;
        margin-right: auto;
        display: block;
    }

    button {
        width: 80%;
        max-width: 400px;
        background-color: #000000;
        color: #ffffff;
        border: none;
        border-radius: 5px;
        padding: 10px 15px;
        cursor: pointer;
        text-decoration: none;
        display: block;
        font-size: 16px;
        margin-left: auto;
        margin-right: auto;
    }

    button:hover {
        background-color: #444444;
    }
</style>

{% endblock %}

{% block body %}
{% include 'header.html.twig' %}
    <div class="tournament-form-container">
        <h1>Create Tournament</h1>

        {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.date_start_register) }}
            {{ form_row(form.date_end_register) }}
            {{ form_row(form.nb_max_team) }}
            {{ form_row(form.nb_max_by_team) }}
            {{ form_row(form.date_start) }}
            <button class="btn">Create</button>
        {{ form_end(form) }}
    </div>
{% endblock %}